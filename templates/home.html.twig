{% extends 'base.html.twig' %}

{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Welcome</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
            }
            header {
                background-color: #2c3e50;
                color: white;
                padding: 1rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }
            header a {
                color: white;
                text-decoration: none;
                background-color: #3498db;
                padding: 0.5rem 1rem;
                border-radius: 4px;
            }
            main {
                padding: 2rem;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <header>
            <h1>My Symfony App</h1>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                Logged in as {{ app.user.username }}
            {% else %}
                <a href="{{ path('app_login') }}">Login</a>
            {% endif %}
        </header>

        <main>
            <h2>Welcome to the Home Page</h2>
            <p>This is the public home screen. Please log in to access your dashboard.</p>
        </main>
    </body>
    </html>

{% endblock %}
